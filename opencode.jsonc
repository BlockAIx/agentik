          "git add *": "allow",
          "git commit *": "allow",
          "git push *": "deny"
        }
      }
    },
    "test": {
      "model": "github-copilot/gemini-3.1-pro-preview",
      "max_steps": 3,
      "permission": {
        "bash": {
          "git status *": "allow",
          "git diff *": "allow"
        }
      }
    },
    "document": {
      "model": "github-copilot/gemini-3-flash-preview",
      "max_steps": 2,
      "permission": {
        "bash": {
          "git status *": "allow",
          "git diff *": "allow"
        }
      }
    },
    "explore": {
      "model": "github-copilot/gemini-3-flash-preview",
