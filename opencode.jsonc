      "permission": {
        "edit": "deny",
        "bash": {
          "*": "deny"
        }
      }
    },
    "milestone": {
      "model": "github-copilot/gemini-3.1-pro-preview",
      "max_steps": 3,
      "permission": {
        "edit": "deny",
        "bash": {
          "git status *": "allow",
          "git diff *": "allow",
          "git log *": "allow",
          "git show *": "allow",
          "cat *": "allow",
          "find *": "allow",
          "ls *": "allow",
