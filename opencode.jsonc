{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/gemini-3.1-pro-preview",
  "agent": {
    "build": {
      "model": "github-copilot/gemini-3.1-pro-preview",
      "max_steps": 3,
      "permission": {
        "bash": {
          "git status *": "allow",
          "git diff *": "allow",
          "git add *": "allow",
          "git commit *": "allow",
          "git push *": "deny"
        }
      }
    },
    "fix": {
      "model": "github-copilot/gemini-3.1-pro-preview",
      "max_steps": 3,
      "permission": {
        "bash": {
          "git status *": "allow",
